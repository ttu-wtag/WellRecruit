<div id="jobs">
  <% @jobs.each_slice(3) do |jobs_group| %>
    <div class="row mb-4">
      <% jobs_group.each do |job| %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= job.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted">Location: <%= job.location %></h6>

              <p class="card-text">
                <strong>Salary range:</strong> <%= job.salary_range %><br>
                <strong>Deadline:</strong> <%= job.deadline %><br>
              </p>
              <%= link_to "Show Details", job, class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="pagination-container d-flex justify-content-center mt-4">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>